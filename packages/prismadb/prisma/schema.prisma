generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@192.168.122.2:5432/postgres"
  schemas  = ["identity", "verification", "voting"]
}

model admin {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  role     String

  @@schema("identity")
}

enum VerificationStatus {
  PENDING
  APPROVED

  @@schema("identity")
}

model voters {
  voterid       String             @id @default(cuid())
  name          String
  email         String             @unique
  phone         String             @unique
  aadhar        String             @unique
  streetaddress String
  pincode       String
  state         String
  city          String
  identitycert  String             @unique
  votingcert    String?            @unique
  identityjwt   String             @unique
  walletaddress String?            @unique
  verification  VerificationStatus @default(PENDING)

  @@schema("identity")
}

enum ActiveVotingLevelsStatus {
  PENDING
  APPROVED

  @@schema("voting")
}

model ActiveVotingLevels {
  id         String                   @id @default(cuid())
  LevelName  String
  status     ActiveVotingLevelsStatus @default(PENDING)
  candidates candidates[]

  @@schema("voting")
}

enum CandidatesStatus {
  PENDING
  VERIFIED

  @@schema("voting")
}

model candidates {
  id            String             @id @default(cuid())
  name          String
  statement     String
  image         String
  votes         Int                @default(0)
  levelId       String
  level         ActiveVotingLevels @relation(fields: [levelId], references: [id])
  status        CandidatesStatus   @default(PENDING)
  WalletAddress String             @unique

  @@schema("voting")
}
